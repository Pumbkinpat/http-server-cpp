{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++ in External Terminal",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Compile and run C++ code",
      "dependsOn": [
        "Launch External Terminal"
      ]
    },
    {
      "label": "Launch External Terminal",
      "type": "shell",
      "command": "osascript",
      "args": [
        "-e",
        "tell application \"Terminal\" to do script \"cd '${fileDirname}' && ./${fileBasenameNoExtension}\""
      ]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}